<Page
    x:Class="NotificationHubSample_WP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" FontSize="42" HorizontalAlignment="Center" >Favorites</TextBlock>
            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <ToggleSwitch Name="ToggleSwitchNews">News</ToggleSwitch>
                <ToggleSwitch Name="ToggleSwitchSports">Sports</ToggleSwitch>
                <ToggleSwitch Name="ToggleSwitchMusic">Music</ToggleSwitch>
                <Button Content="Register" Name="Button" Click="ButtonBase_OnClick"/>
            </StackPanel>
        </Grid>
  </Grid>
</Page>
